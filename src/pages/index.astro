---
import Layout from "../layouts/Layout.astro";
const labs = [
  { id: 1, title: "Лабораторная 1", href: "/labs/1", desc: "Сортировка дат (клиентский список + алгоритм)" },
  { id: 2, title: "Лабораторная 2", href: "/labs/2", desc: "Ветви и границы для целочисленной задачи" },
  { id: 3, title: "Лабораторная 3", href: "/labs/3", desc: "Стэки и очереди: раскладка контейнеров" },
  { id: 4, title: "Лабораторная 4", href: "/labs/4", desc: "Графы: проверка наличия цикла" },
];
---

<Layout title="ЛР — Структуры Данных">
  <section class="mb-10 w-full">
    <h1 class="text-3xl sm:text-4xl md:text-5xl font-semibold tracking-tight leading-relaxed">
      Лабораторные работы по дисциплине <span class="bg-accent/15 rounded-md px-2 py-1 text-accent whitespace-nowrap">Структуры Данных</span>
    </h1>
    <p class="mt-4 text-muted w-full">Выполнил: Луков Иван, ИС-23-4.</p>
  </section>

  <section class="flex flex-col gap-4">
    {labs.map((lab) => (
      <a href={lab.href} class="card group relative overflow-hidden w-full px-6 py-5 flex items-center justify-between">
        <div class="absolute -right-16 -top-16 h-40 w-40 rounded-full bg-accent/10 blur-2xl group-hover:bg-accent/20 transition-colors"></div>
        <div class="relative">
          <h2 class="text-2xl font-semibold">{lab.title}</h2>
          <p class="mt-1 text-sm text-muted/90">{lab.desc}</p>
        </div>
        <span class="relative text-accent text-lg group-hover:translate-x-1 transition-transform">→</span>
      </a>
    ))}
  </section>
</Layout>
